                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_20"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_4_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_27_12"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/day_4_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fri"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/jpg_4_7"
                android:layout_width="66dp"
                android:layout_height="89dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                app:srcCompat="@drawable/t22" />

            <TextView
                android:id="@+id/t_day_4_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_26"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/t_night_4_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_20"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_5_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_28_12"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/day_5_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
